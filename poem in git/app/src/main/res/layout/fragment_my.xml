<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                android:id="@+id/tochange"
                android:layout_height="60dp"

                app:sLeftTextString="帐号管理—-更改密码"
                app:sLeftViewMarginLeft="10dp" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                android:id="@+id/toheart"
                android:layout_height="60dp"
                app:sLeftTextString="喜爱列表">

            </com.xuexiang.xui.widget.textview.supertextview.SuperTextView>

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                app:sLeftTextString="通知设置" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                app:sLeftTextString="账号与安全"
                app:sRightTextString="已保护" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                app:sDividerLineType="none"
                app:sLeftTextString="设置中心" />


            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                style="@style/InfoItem.Account"
                android:id="@+id/suggestion"
                android:layout_marginTop="50dp"
                app:sDividerLineType="none"
                app:sLeftTextString="意见反馈" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>